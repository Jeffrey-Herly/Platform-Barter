# TTU Application Environment Configuration
# Copy this file to .env and modify as needed

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Environment (development, production, test)
NODE_ENV=development

# Logging
LOG_LEVEL=debug

# ===========================================
# HTTPS CONFIGURATION
# ===========================================

# Enable HTTPS (set to true for HTTPS)
ENABLE_HTTPS=false

# Server Ports
HTTPS_PORT=2443
HTTP_PORT=2000
HOST=localhost

# ===========================================
# SSL CERTIFICATES
# ===========================================

# For Production - Path to SSL certificates from trusted CA
# SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
# SSL_KEY_PATH=/etc/ssl/private/your-domain.key
# SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# For Development - Leave empty to use auto-generated self-signed certificates
# Certificates will be loaded from ssl/dev/ directory

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Force HTTPS redirect (redirect HTTP to HTTPS)
FORCE_HTTPS=false

# HTTP Strict Transport Security (HSTS)
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=false

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================

# Enable HTTP/2 support (requires HTTPS)
ENABLE_HTTP2=false

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Add your database configuration here
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ttu_db
# DB_USER=your_username
# DB_PASSWORD=your_password

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Enable detailed error messages in development
SHOW_DETAILED_ERRORS=true

# Enable CORS for development
ENABLE_CORS=true
