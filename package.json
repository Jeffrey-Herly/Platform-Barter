  "devDependencies": {
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.1"
  },
  "keywords": [],
  "nodemonConfig": {
    "watch": [
      "src/**/*.js",
      "src/app.js"
    ],
    "ext": "js,json",
    "signal": "SIGTERM",
    "delay": "250",
    "legacy-watch": true,
    "ignore": [
      "public/**",
      "src/views/**"
    ]
  }
