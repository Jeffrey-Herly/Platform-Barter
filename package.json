  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "dev:https": "ENABLE_HTTPS=true nodemon src/app.js",
    "generate-ssl": "node scripts/generate-ssl-cert.js",
    "generate-ssl:bash": "./scripts/generate-ssl-cert.sh",
    "setup:https": "npm run generate-ssl && echo 'SSL certificates generated. Set ENABLE_HTTPS=true in .env to use HTTPS'",
    "test:http": "curl -i http://localhost:2000/health",
    "test:https": "curl -i -k https://localhost:2443/health"
